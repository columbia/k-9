<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:padding="6dip"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_setup_e3_password_header"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/e3_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="@string/account_setup_e3_password_hint"
                android:inputType="textPassword"
                android:maxLines="1"
                android:nextFocusDown="@+id/e3_password_confirm"/>

            <EditText
                android:id="@+id/e3_password_confirm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/account_setup_e3_password_confirm_hint"
                android:inputType="textPassword"
                android:maxLines="1"
                android:nextFocusDown="@+id/next"/>

            <CheckBox
                android:id="@+id/show_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/account_setup_e3_show_password"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="2dp"
                android:text="@string/account_setup_e3_backup_password_help"
                android:textSize="14sp"/>

            <com.fsck.k9.view.FoldableLinearLayout
                android:id="@+id/foldable_advanced_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:foldedLabel="@string/account_setup_e3_advanced_options"
                custom:unFoldedLabel="@string/account_setup_e3_advanced_options">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_setup_e3_key_name_header"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/e3_key_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/account_setup_e3_key_name_hint"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/e3_backup_folder"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="2dp"
                    android:text="@string/account_setup_e3_key_name_help"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_setup_e3_backup_folder_header"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/e3_backup_folder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/account_setup_e3_backup_folder_hint"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/next"
                    android:text="@string/account_setup_e3_backup_folder_text"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginStart="2dp"
                    android:text="@string/account_setup_e3_backup_folder_help"
                    android:textSize="14sp"/>
            </com.fsck.k9.view.FoldableLinearLayout>



            <View
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/wizard_setup"/>

</LinearLayout>